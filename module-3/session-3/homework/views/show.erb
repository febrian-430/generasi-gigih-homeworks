<%= erb :header %>

<div>
    <p>ID: <%= item.id %></p>
    <p>Name: <%= item.name %></p>
    <p>Price: <%= item.price %></p>
    <p>Category: 
    <% item.categories.each do |category| %>
        <a href="/items?category=<%= category.name %>"> 
            <%= "#{category.name}, " %>
        </a>
    <% end %>
    </p>
    <a href="/items/<%= item.id %>/edit">Edit</a>
    <form action="/items/<%= item.id %>/delete" method="post">
        <input type="submit" value="Delete" />
    </form>
</div>